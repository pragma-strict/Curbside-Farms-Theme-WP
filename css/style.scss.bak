/* ========== GENERAL ========== */

header {
	height: 3rem;
	width: 100%;
	margin-bottom: 50px;
	//margin-top: 3rem;
}

footer{
	text-align: center;
	//margin-top: 5rem;
}






/* ========== BEGIN ABOUT ========== */

.content-block{
	width: 100%;
	padding: 1rem;
	margin-top: 4rem;
}

.about-list{
	width: 100%;
	padding-left: 0px;
}

.about-list ul{
	list-style-image: url('img/carrot_icon_bw_20px.png');
}

@media (min-width: 1200px) {
	.about-list{
		margin-top: 7rem;
		border-left-style: solid;
		border-left-width: thin;
	}

	.about-list ul{
		padding-left: 5rem;
	}
}






/* ========== BEGIN NAVBAR ========== */

.primary-menu{
	position: absolute;
	width: 100%;
}

.navbar-brand{
	background-image: url("img/logo-medium-small.png");
	height: 64px;
	width: 150px;
	background-position: center;
	background-repeat: no-repeat;
	background-size: cover;
	position: relative;
}

.navbar{
	padding-top: 3rem;
}

// The list of links inside the navbar
.nav__links{
	border-bottom-style: solid;
	border-width: thin;
	list-style-type: none;
	margin:0px;
	width: 100%;
}

// The individual list elements
.nav__links li {
	display: inline-block;
	padding: 0rem 2rem 0rem 0rem;
	//text-align: center;
	//transition: all 0.2s ease 0s;
}

// The links themselves inside the list elements
.nav__links li a{
	color: black;
}






/* ========== FOOTER MENU ========== */

// The list of links inside the navbar
.nav__links__footer{
	list-style-type: none;
	margin: 0px;
	padding: 0px;
	width: 100%;
	padding-top: 2rem;
	border-top: solid thin;
}

// The individual list elements
.nav__links__footer li {
	display: inline-block;
	padding: 0rem 4rem;
	text-align: center;
}

// The links themselves inside the list elements
.nav__links__footer li a{
	color: black;
}






/* ========== PRODUCT CARDS ========== */

.product-card{
	padding:1rem;
}

.card{
	// This defines the window in which the image can be displayed, within the card
	.card-img-window{
		height: 12rem;
		overflow: hidden;
	}
	
	.card-body{
		.btn{
			background-color: white;
			border-color: gainsboro;
			color: black;
		}

		.btn:hover{
			background-color: rgb(230, 230, 230);
		}
	}
}


