.fade-out{
	animation: fadeOut ease 1s;
	-webkit-animation: fadeOut ease 1s;
	-moz-animation: fadeOut ease 1s;
}

@keyframes fadeOut {
	0% {
		opacity:1;
	}
	100% {
		opacity:0;
	}
}

@-moz-keyframes fadeOut {
	0% {
		opacity:1;
	}
	100% {
		opacity:0;
	}
}
 
@-webkit-keyframes fadeOut {
	0% {
		opacity:1;
	}
	100% {
		opacity:0;
	}
}




#survey-page{
	padding-top: 3rem;
	padding-left: 2rem;
	padding-right: 2rem;
	
	//.survey-tab{
	//	.label{
	//		display: inline-block;
	//	}
	//}

	.invalid{
		background-color: #ffdddd;
	}

	input{
		margin: 10px;
		margin-left: 0;
	}
	
	input[type="text"]{
		border: 1px solid #aaaaaa;
		font-size: 17px;
		padding: 5px;
		width: 100%;
		//font-family: Roboto;
	}

	/* Mark input boxes that gets an error on validation: */
	input[class~="invalid"] + label{
		background-color: #4CAF50;
	}

	input[type="submit"]{
		background-color: #4CAF50;
		color: #ffffff;
		border: none;
		padding: 10px 20px;
		margin: 5px;
		font-size: 17px;
		font-family: Roboto;
		cursor: pointer;
	}

	input[type="submit"]:hover {
		opacity: 0.8;
	}

	button {
		background-color: #4CAF50;
		color: #ffffff;
		border: none;
		padding: 10px 20px;
		margin: 5px;
		font-size: 17px;
		font-family: Roboto;
		cursor: pointer;
	}

	button:hover {
		opacity: 0.8;
	}


	#prevBtn {
		background-color: #bbbbbb;
	}
}




/* ========== FRONT PAGE ========== */


#fp-cover{
	pointer-events: none;
	position: fixed;
	background: whitesmoke;
	width: 100%;
	height: 100%;
	opacity: 0;
	//clip: rect(0px, 400px, 1000px, 0px);

	h1{
		margin: 0;
		position: absolute;
		text-align: center;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		font-weight: 900;
	}
}

#fp-cover-text-1{
	pointer-events: none;
	position: fixed;
	width: 100%;
	height: 100px;
	color: #352b1c;
	//clip: rect(0px, 350px, 300px, 0px);
	opacity: 0;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
}

#fp-cover-text-2{
	pointer-events: none;
	position: fixed;
	width: 100%;
	height: 100px;
	color: green;
	//clip: rect(0px, 300px, 300px, 0px);
	opacity: 0;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
}



// The dynamic header image thing
#fp-bg{
	//position: fixed;
	height: 100%;
	width: 100%;
	
	.fp-bg-img{
		background-position: right top;
		background-repeat: no-repeat;
		background-size: cover;
		height: 100%;
		width: 100%;
		transition: opacity 0.5s;
		position: fixed;
	}
}

#fp-main{
	font-size: 20px;
	//opacity: 0;
}


// main content on the front page
.fp-content{
	position: fixed;
	transition: opacity 0.3s;
	opacity: 0;
	background-color: rgba(255, 255, 255, 0.5);
	width: 100%;
	color: #222222;
	font-size: 1em;

	h1{
		font-weight: bold;
		font-size: 1.5em;
		color: #393939;
	}

	// Custom CSS for rmagic forms
	.rmagic .rmcontent form fieldset{
		padding: 0;
		
		// Email area
		.rm_form_page{
			display: inline-block;
			width: 100%;
			max-width: 15em;

			.rmrow{
				padding: 0;
				padding-right: 15px;
				padding-bottom: 15px;
				float: none;
				min-height: 15px;

				// Actual email input
				input[type=email]{
					min-height: 15px;
				}

				// Email label
				.rmfield{
					display: none;
				}
			}
		}

		// Button area
		.buttonarea {
			padding: 0;
			margin: 0;
			display: inline-block;
			width: auto;
			float: none;

			// Actual button
			input[type=submit]{
				margin: 0;
				min-height: 15px !important;
				min-width: 0;
				padding: 0px 20px;
			}
		}

		// Disable response (error) messages
		.rm-response-message{
			display: none;
		}
	}
}


// The title on the front page
#fp-navbar{
	position: fixed;
	padding: 15px 25px 15px 25px;
	width: 100%;
	line-height: 20px;
	h1{
		color: #f1e6da;
		display: inline;
		font-size: 48pt;
		font-weight: 900;
	}
}

.fp-navbar-title{
	width: 100px;
}

.fp-navbar-hamburger{
	width: 35px;
	height: 5px;
	background-color: black;
	margin: 6px 0;
}

.fp-dropdown{
	float: right;
	height: 100%;
	line-height: 50px;

	button{
		border: 0;
		padding: 0px 10px 0px 10px;
		background: 0;
	}

	button:hover, button:focus{
		background-color: rgba(0, 0, 0, 0.2);
	}
}

.fp-dropdown-content{
	display: none;
	min-width: 160px;
	z-index: 1;

	a{
		color: black;
		padding: 12px 16px;
		text-decoration: none;
		display: block;
	}
}


/* Show the dropdown menu (use JS to add this class to the .dropdown-content container when the user clicks on the dropdown button) */
.show {display:flex;}




